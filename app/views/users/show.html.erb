<% provide(:title, @user.name) %>

  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <!--three above elements introduce a sidebar -->
        <h1>
          <!-- creates a user icon and displays a name with it inside a heading ,
          refer to gravatar docs for more info-->
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
    </aside>
  </div>
